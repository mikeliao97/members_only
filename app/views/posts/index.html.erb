<div class="float-right">
  <% if signed_in? %>
  <%= link_to "(#{current_user.name}) Sign out", logout_path, method: "delete" %>
  <% else %>
    <%= link_to 'Sign in', login_path%>
  <% end %>
</div>

<h1>Members Only Posts</h1>

<% @posts.each do |post| %>
  <% if signed_in? %>
    <h1> <%= post.user.name %> </h1>
  <% end %>
  <h4> <%= post.title %></h4>  
  <p > <%= post.body %></p>
<% end %>

<% if signed_in? %>
  <%= link_to "Create a Post", posts_new_path%>
<% end %>
